<% provide(:title, @document.title) %>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <div class="row">
        <div class="col-sm-11 text-center">
          <h3><%= @document.title %></h3>
          <span>Titulo</span>
        </div>
        <div class="col-sm-1 text-center">
          <h3><%= @document.current_version.number %></h3>
          <span >Version</span>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Codigo</th>
            <th>Descripción</th>
            <th>Origen</th>
            <th>Categoria</th>
            <th>Ubicación</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= @document.code %></td>
            <td><%= @document.description %></td>
            <td><%= @document.origin %></td>
            <td><%= @document.category.name %></td>
            <td><%= @document.location %></td>
            <td><%= link_to "Descargar", @document.current_version.uploaded_file.url %></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="actions">
      <%= link_to 'Volver al Listado Maestro', documents_path, class: "btn btn-default" %>
    </div>
  </div>
</div>

