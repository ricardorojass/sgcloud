<% provide(:title, "Listado Maestro") %>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <div class="row">
        <div class="col-sm-8">
          <h3>Listado Maestro</h3>
        </div>
        <div class="col-sm-4 text-right">
          <%= link_to 'New Document', new_document_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Codigo</th>
            <th>Titulo</th>
            <th>Descripci√≥n</th>
            <th>Origen</th>
            <th>Categoria</th>
            <th>Ubicacion</th>
            <th>Version</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @documents.each do |document| %>
            <tr>
              <td><%= document.code %></td>
              <td><%= document.title %></td>
              <td><%= document.description %></td>
              <td><%= document.origin %></td>
              <td><%= document.category.name %></td>
              <td><%= document.location %></td>
              <td><%= document.current_version.number %></td>
              <td><%= link_to "Descargar", document.current_version.uploaded_file.url %></td>
              <td><%= link_to 'Show', document %></td>
              <td><%= link_to 'Edit', edit_document_path(document) %></td>
              <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>

<br>

