<%= form_for @document, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :code, "Codigo" %><br>
        <%= f.text_field :code, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :title, "Titulo" %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Descripción" %><br>
        <%= f.text_area(:description, size: '19x5', class: "form-control") %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :origin, "Origen" %><br>
        <%= f.select :origin, Document.origins.to_a.map { |o,| [o.humanize, o] }, {prompt: "Seleciona un origen"}, { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= f.label :category_id, "Categoria" %><br>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Selecciona una categoria"}, {class: "form-control"}) %>
      </div>
      <div class="form-group">
        <%= label_tag :uploaded_file, "Archivo" %><br>
        <%= file_field_tag :uploaded_file, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :location, "Ubicación" %><br>
        <%= f.text_field :location, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-6">
      <div class="actions text-right">
        <%= link_to "Cancelar", documents_path, class: "btn btn-default" %>
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
