<% provide(:title, 'Ingresar') %>
<div class="container login">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Ingresar</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for logueo_path do |f| %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <%= f.submit "Ingresar", class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
      <div class="option">
        <%= link_to 'Aun no tengo cuenta', signup_path %>
      </div>
    </div>
  </div>
</div>
